<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="200"
             x:Class="UpdaterGUI.Views.PasswordView">
    <StackPanel VerticalAlignment="Center" Margin="5">
        <TextBlock Margin="0,0,0,5">Sudo Password</TextBlock>
        <TextBox PasswordChar="*" Margin="0,0,0,5" Text="{Binding Password}"/>
        <Button IsDefault="True" HorizontalAlignment="Center" Command="{Binding Ok}">OK</Button>
    </StackPanel>
</UserControl>
